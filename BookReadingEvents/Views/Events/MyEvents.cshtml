@model IEnumerable<BookReadingEvents.Domain.Event>

@{
    ViewBag.Title = "My Events";
    
}

<h2>MyEvents</h2>
@if (Model != null)
{

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OtherDetails)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Location)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Duration)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OtherDetails)
    </td>
    <td>
        @Html.ActionLink("Details", "Detail", "TableData", new { eventId = item.EventId }, null) |
        @Html.ActionLink("Delete", "Delete", "TableData", new { eventId = item.EventId }, null) |
        
        @if (item.Date > DateTime.Now) {
        <span>@Html.ActionLink("Edit", "Edit", "TableData", new { eventId = item.EventId }, null)</span> 
        }
    </td>
</tr>
}

</table>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
}
@if (Model == null) { 

    <h1>Looks like there are no events!</h1>
}
