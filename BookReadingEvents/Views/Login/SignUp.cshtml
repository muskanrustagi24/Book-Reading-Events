@{
    Layout = "~/Views/Shared/_LayoutLoginSignup.cshtml";
}
@model BookReadingEvents.Domain.User

    <div class="row">
        <div class="col"></div>
        <div class="col form">
            <div class="head">
                <h1 style="position:relative; right:-10px;">Sign Up</h1>
                <br />
            </div>
            
            <form action="/Login/SignUp" method="POST">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Email)
                </div>

                <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.PasswordFor(model => model.Password)
                </div>
               
                <button type="submit" style="position:relative; right:-10px;" class="btn btn-primary">Join Now</button>
                <div class="line"></div>
                <br />
                <div style="position:relative; right:-10px;">Already have an account ? @Html.ActionLink("Login", "Index", "Login")</div>
            </form>
        </div>
        <div class="col"></div>
    </div>
