@{
    Layout = "~/Views/Shared/_LayoutLoginSignup.cshtml";
}
@model BookReadingEvents.Domain.User


    <div class="row">
        <div class="col"></div>
        <div class="col form">
            <div class="head">
                <br />
                <br />
                <h1>Sign Up</h1>
                <small class="form-text text-muted">Please fill this form to create an account.</small>
            </div>
            <br>
            <form action="/Login/SignUp" method="POST">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email)
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.PasswordFor(model => model.Password)
                 <br/>
                <small class="form-text text-muted">By clicking Join Now, you agree to User Agreement, Privacy Policy and all terms & conditions.</small>
                </div>
                <button type="submit" class="btn btn-primary">Join Now</button>
                <div class="line"></div>
                <br />
                <div class="text-center">Already have an account ? <a style="text-decoration:none;" href="https://localhost:44307/Login">Login</a></div>
            </form>
        </div>
        <div class="col"></div>
    </div>
